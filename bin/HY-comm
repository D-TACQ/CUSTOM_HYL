#!/usr/bin/env expect
# HY-comm: responds to command NEW

set FNC /dev/shm/HY-comm
set FNS /dev/shm/HY-stat

proc get_ctrl_stat {} {
	return [lindex [exec get.site 0 SIG:EVENT_SRC:3] 1]
}


catch {
	while { 1 } {
		expect_user {
			-re "NEW (\[A-Za-z0-9\._]+).*$" {
				set fp [open $FNC w]
				puts $fp "NEW $expect_out(1,string)"
				close $fp
				send_user "HY-comm> OK $expect_out(1,string)\n\r"
			}
			-re "\n" {
				send_user "HY-comm> [get_ctrl_stat] [read [open $FNS r]]"
			}
		}		
	}
}